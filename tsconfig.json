{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "outDir": "dist",
    "strictNullChecks": true,
    "lib": [
"ES2021"
    ]
  },

  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "**/*.spec.ts", "src/scripts/**/*"]
}
